<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AnimeXplorer" parent="Theme.Material3.DayNight">
        <!-- Customize your light theme here. -->
    </style>

    <!-- Custom application theme -->
    <style name="AppTheme" parent="Theme.Material3.Dark">
        <item name="colorPrimary">@color/navy</item>
        <item name="colorPrimaryDark">@color/navy</item>
        <item name="colorOnSecondary">@color/crem</item>
        <item name="android:textColor">@color/crem</item>
        <item name="popupMenuBackground">@color/navy</item>
